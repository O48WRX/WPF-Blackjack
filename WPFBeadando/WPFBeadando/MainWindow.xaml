        <Button x:Name="GameStart" Content="Játék" HorizontalAlignment="Center" Margin="0,192,0,0" VerticalAlignment="Top" Height="46" Width="120" Background="#303030" Click="GameStart_Click"/>
        <Label Content="Blackjack" HorizontalAlignment="Center" Margin="0,61,0,0" VerticalAlignment="Top" Height="85" Width="228" FontSize="54" Background="#303030"/>
        <Label Content="Kardos Zsolt (O48WRX)" HorizontalAlignment="Left" Margin="23,348,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
